{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.7.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.3",
    "@testing-library/user-event": "^7.1.2",
    "axios": "^0.19.0",
    "express": "^4.17.1",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.1",
    "npm-watch": "^0.3.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "stylelint": "^12.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^3.1.1",
    "travis": "^0.1.1"
  },
  "scripts": {
    "start": "npm-run-all -p watch-sass-js start-js",
    "build": "npm run stylelint-build && npm run eslint && react-scripts build",
    "test": "react-scripts test",
    "start-js": "react-scripts start",
    "eject": "react-scripts eject",
    "lint": "eslint ./src",
    "eslint": "eslint src/**/*.js",
    "stylelint-dev": "stylelint src/**/*.scss --cache --cache-location ./.stylelintcache; exit 0",
    "stylelint-build": "stylelint src/**/*.scss",
    "stylelint-fix-sass": "stylelint --fix src/**/*.scss",
    "watch-sass-js": "npm-watch"
  },
  "watch": {
    "stylelint-dev": {
      "patterns": [
        "/src/**/*.scss"
      ],
      "extensions": "scss"
    },
    "eslint": {
      "patterns": [
        "/src/**/*.js"
      ],
      "extensions": "js"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "nodemon": "^2.0.2",
    "redux-devtools": "^3.5.0",
    "standard": "^14.3.1"
  }
}
